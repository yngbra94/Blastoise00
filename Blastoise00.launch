<launch>
    <!-- Arguments -->

    <arg name="auto_start" default="false"/>


    <!-- SLAM -->
    <include file="$(find turtlebot3_slam)/launch/turtlebot3_slam.launch" />

    <!-- Navigation -->
    <include file="$(find turtlebot3_navigation)/launch/move_base.launch" />
    <include file="$(find turtlebot3_navigation)/launch/amcl.launch" />

    <!-- Exploration -->
    <include file="$(find explore_lite)/launch/explore.launch">
        <arg name="auto_start" value="$(arg auto_start)" />
    </include>

    <!-- Command Server & Navigation Node -->
    <node pkg="my_package" type="command_server_node.py" name="command_server_node" output="screen">
    </node>
    <node pkg="my_package" type="navigation_node.py" name="navigation_node" output="screen">
    </node>

</launch>
